{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "types": ["react-native"],
        "baseUrl": ".",
        "paths": {
            "@features/*": ["src/features/*"],
            "@entities/*": ["src/entities/*"],
            "@shared/*": ["src/shared/*"],
            "@widgets/*": ["src/widgets/*"],
            "@screens/*": ["src/screens/*"],
            "@app/*": ["src/app/*"]
        }
    }
}
